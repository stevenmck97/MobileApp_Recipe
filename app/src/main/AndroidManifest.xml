<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ie.wit">

    <uses-permission android:name="android.perission.INTERNET"/>

    <application
        android:name=".main.RecipesApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foods_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_foods_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main.SignInActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Home"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".activities.RecipeListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".activities.RecipeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>
    </application>
</manifest>